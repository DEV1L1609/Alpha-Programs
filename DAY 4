#include <stdio.h>

int tri(int base, int height)
{
return (base*height)/2;
 
}

int main()
{
    int base, height, area;
    
    printf("Enter the value of the base \n");
    scanf("%d", &base);
    printf("Enter the value of the height \n");
    scanf("%d", &height);
    
    area = tri (base,height);
    printf("The area of the given triangle is %d\n", area);
    
}
