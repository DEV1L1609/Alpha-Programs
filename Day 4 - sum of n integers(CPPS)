#include <stdio.h>
int input()
{
    int n;
    printf("Enter the no. of integers required");
    scanf("%d", &n);
    return n;
}
int store(int i, int a[i])
{
    int m;
    for(m=0;m<i;m++)
    {
        printf("Enter the integer");
        scanf("%d", &a[m]);
    }
    int *s = &a[0];
    return *s;
}
int compute(int i; int *g)
{
    int sum;
    for(sum=0;*g;*g++)
    {
        sum = sum + *g;
    }
    return sum;
}
int output(int x)
{
    printf("The sum of the integers is %d", x);
}
int main()
{
    int a[100];
    int b = input();
    int *p = store(b, a[b]);
    int y = compute(b, *p); 
    output(y);
} 
    
