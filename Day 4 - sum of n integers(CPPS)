 #include <stdio.h>

int input ()
{ int x;
  printf("Enter the number of values required\n");
  scanf("%d", &x);
  return x;
}
int store (int i)
{ 
  int a[i]; 
  for (int m=0; m<i; m++)
  {
   printf("Enter an integer\n");
   scanf("%d", &a[m]);
  } 
  int *s = &a[i];
  return *s;
}
int sum (int i, int g)
{ int s;
 for (int m=0; m<i; m++)
 {
  s = s + g;
 }
  return s;
}
void output(int sum)
{
 printf("The sum of the integers is %d\n", sum);
}

int main()
{int tot,g;
 int n=input();
 store(n) = g;
 sum(n,g) = tot;
 output(tot);
}
