#include<stdio.h>

struct fraction{
	int num;
	int den;
};
int i;


void input()
 { fraction s;
     for(int n=0,n<=i;n++)
     {
        printf("Enter the value of the numerator");
        scanf("%d", &s[n].num);
        printf("Enter the value of the denominator");
        scanf("%d", &s[n].den);
        
     }
  printf("Enter the numerator of the first fraction\n");
