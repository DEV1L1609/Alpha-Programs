  printf("Enter the denominator of the first fraction\n");
  scanf("%d",&f1->den);
  printf("Enter the numerator of the second fraction\n");
  scanf("%d",&f2->num);
  printf("Enter the denominator of the second fraction\n");
  scanf("%d",&f2->den);
