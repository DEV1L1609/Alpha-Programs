#include <stdio.h>

struct tri
{
  float b, h, ar;
} a;

float
tri (float base, float height)
{
  a.ar = ((base * height) / 2);
  return (a.ar);
}

float
main ()
{

  printf ("Enter the value of the base \n");
  scanf ("%f", &a.b);
  printf ("Enter the value of the height \n");
  scanf ("%f", &a.h);

  a.ar = tri (a.b, a.h);
  printf ("The area of the given triangle is %f\n", a.ar);

}
