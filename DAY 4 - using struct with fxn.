#include <stdio.h>

struct tri
{
  int b, h, ar;
} a;

int
tri (int base, int height)
{
  a.ar = ((base * height) / 2);
  return (a.ar);
}

int
main ()
{
  int b, h, ar;

  printf ("Enter the value of the base \n");
  scanf ("%d", &b);
  printf ("Enter the value of the height \n");
  scanf ("%d", &h);

  ar = tri (b, h);
  printf ("The area of the given triangle is %d\n", ar);

}
