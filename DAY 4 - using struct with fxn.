#include <stdio.h>

struct tri
{
  float b, h, ar;
} a;

float
tri (float base, float height)
{
  a.ar = ((base * height) / 2);
  return (a.ar);
}

float
main ()
{
  float b, h, ar;

  printf ("Enter the value of the base \n");
  scanf ("%f", &b);
  printf ("Enter the value of the height \n");
  scanf ("%f", &h);

  ar = tri (b, h);
  printf ("The area of the given triangle is %f\n", ar);

}
