#include <stdio.h>

struct tri{
    int b;
    int h;
    int ar;
}a;

int main()
{
    printf("Enter the value of the base here \n");
    scanf("%d",&a.b);
    
    printf("Enter the value of the height here \n");
    scanf("%d",&a.h);
    
    a.ar=((a.b* a.h)/2);
    
    printf("The area of the given triangle is %d", a.ar);
    
    
}
