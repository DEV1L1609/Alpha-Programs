#include <stdio.h>

struct tri{
    int base;
    int height;
    int area;
}a;

int main()
{
    printf("Enter the value of the base here \n");
    scanf("%d",&a.base);
    
    printf("Enter the value of the height here \n");
    scanf("%d",&a.height);
    
    a.area=((a.base* a.height)/2);
    
    printf("The area of the given triangle is %d", a.area);
    
    
}
